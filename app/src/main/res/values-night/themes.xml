<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Auria" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>
    <style name="Theme.Auria" parent="Theme.MaterialComponents.DayNight.NoActionBar">
            <!-- Primary brand color -->
            <item name="colorPrimary">@color/auria_primary</item>
            <item name="colorPrimaryVariant">@color/auria_primary_dark</item>

            <!-- Secondary brand color -->
            <item name="colorSecondary">@color/auria_accent</item>
            <item name="colorSecondaryVariant">@color/auria_accent_light</item>

            <!-- Status bar -->
            <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

            <!-- Surface colors -->
            <item name="android:colorBackground">@color/auria_bg</item>
            <item name="colorSurface">@color/auria_bg_card</item>

            <!-- Text colors -->
            <item name="android:textColorPrimary">@color/auria_text</item>
            <item name="android:textColorSecondary">@color/auria_text_secondary</item>

            <!-- Custom attributes for your app -->
            <item name="cardBackgroundColor">@color/auria_bg_card</item>

    </style>

</resources>