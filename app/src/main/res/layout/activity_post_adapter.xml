<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Profile Emoji -->
            <TextView
                android:id="@+id/userProfileEmoji"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="ðŸ‘¤"
                android:textSize="24sp"
                android:gravity="center"
                android:background="@drawable/circle_bg" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="User Name"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/timeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 hours ago"
                    android:textSize="12sp"
                    android:textColor="@color/gray" />
            </LinearLayout>

            <!-- More Options Button -->
            <Button
                android:id="@+id/moreButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‹¯"
                android:textSize="20sp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="4dp" />
        </LinearLayout>

        <!-- Caption -->
        <TextView
            android:id="@+id/captionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Caption here"
            android:textSize="14sp" />

        <!-- Post Image -->
        <ImageView
            android:id="@+id/postImageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            android:background="@color/light_gray"
            android:visibility="gone" />

        <!-- Stats -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/likesCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â¤ï¸ 0 likes"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/commentsCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="ðŸ’¬ 0 comments"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/light_gray" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <!-- Like Button -->
            <Button
                android:id="@+id/likeButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="ðŸ¤ Like"
                android:textSize="14sp"
                android:background="?android:attr/selectableItemBackgroundBorderless" />

            <!-- Comment Button -->
            <Button
                android:id="@+id/commentButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="ðŸ’¬ Comment"
                android:textSize="14sp"
                android:background="?android:attr/selectableItemBackgroundBorderless" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>